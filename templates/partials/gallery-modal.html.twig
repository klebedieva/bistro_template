<div class="modal fade" id="galleryModal" tabindex="-1" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer la galerie"></button>
            </div>
            <div class="modal-body p-0">
                <div class="gallery-modal-content">
                    <img id="modalImage" src="" alt="Image de la galerie" class="img-fluid w-100">
                    <div class="modal-navigation">
                        <button class="nav-btn prev-btn" id="prevBtn" type="button" aria-label="Voir l'image précédente">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <button class="nav-btn next-btn" id="nextBtn" type="button" aria-label="Voir l'image suivante">
                            <i class="bi bi-chevron-right"></i>
