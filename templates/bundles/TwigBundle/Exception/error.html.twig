{% extends 'base.html.twig' %}

{% set error_code = status_code|default(500) %}
{% set seo_title = 'Erreur ' ~ error_code ~ ' | Le Trois Quarts' %}
{% set seo_description = "Une erreur est survenue. Retournez à l'accueil du Trois Quarts ou contactez-nous pour obtenir de l'aide." %}
{% set seo_robots = 'noindex,follow' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('static/css/404.css') }}?v=8">
{% endblock %}

{% block body %}
    {% if error_code == 404 %}
        {% set default_title = "Oups ! Page non trouvée" %}
        {% set default_message = "Il semblerait que cette page ait disparu comme un bon plat qui se termine trop vite !<br>Mais ne vous inquiétez pas, nous avons plein d'autres délices à vous proposer." %}
    {% elseif error_code >= 500 %}
        {% set default_title = "Oups ! Une erreur s'est produite" %}
        {% set default_message = "Notre brigade technique est sur le coup. Réessayez dans quelques instants ou contactez-nous si le problème persiste." %}
    {% else %}
        {% set default_title = "Quelque chose ne s'est pas passé comme prévu" %}
        {% set default_message = "Un problème est survenu. Essayez à nouveau ou explorez les autres pages du site." %}
    {% endif %}

    {% include 'partials/error-page.html.twig' with {
        code: error_code,
        title: default_title,
        message: default_message,
        actions: [
            {
                href: path('app_home'),
                label: "Retour à l'accueil",
                class: 'btn btn-gold btn-lg',
                icon_html: '<i class="bi bi-house me-2"></i>'
            },
            {
                href: path('app_menu'),
                label: "Voir le menu",
                class: 'btn btn-outline-gold btn-lg',
                icon_html: '<i class="bi bi-book me-2"></i>'
            }
        ]
    } %}
{% endblock %}
